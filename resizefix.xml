<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="media-action" method="upgrade">
	<name>plg_media-action_resizefix</name>
	<author>Travis Risner</author>
	<creationDate>2025-04-18</creationDate>
	<copyright>(C) 2025 Travis Risner. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>git@trav.dev</authorEmail>
	<authorUrl>https://trav.dev</authorUrl>
	<version>4.0.0</version>
	<description>PLG_MEDIA-ACTION_RESIZEFIX_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Plugin\MediaAction\Resizefix</namespace>
	<files>
		<folder>form</folder>
		<folder plugin="resizefix">services</folder>
		<folder>src</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/plg_media-action_resizefix.ini</language>
		<language tag="en-GB">language/en-GB/plg_media-action_resizefix.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset
				name="batch"
				label="PLG_MEDIA-ACTION_RESIZEFIX_BATCH_LABEL"
				description="PLG_MEDIA-ACTION_RESIZEFIX_BATCH_DESC"
				>

				<field
					name="batch_width"
					type="text"
					label="PLG_MEDIA-ACTION_RESIZEFIX_BATCH_MAX_WIDTH_LABEL"
					addonAfter="px"
					filter="integer"
				/>
				<field
					name="batch_height"
					type="text"
					label="PLG_MEDIA-ACTION_RESIZEFIX_BATCH_MAX_HEIGHT_LABEL"
					addonAfter="px"
					filter="integer"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
